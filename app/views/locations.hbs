<h1>{{title}}</h1>
<form action="http://web.engr.oregonstate.edu/~zhangluy/tools/class-content/form_tests/check_request.php" method="post">
    <fieldset>
        <legend>Add a new location</legend>
        <label>Name
            <input type="text" name="name" autocapitalize="words" autofocus required>
        </label>
        <br>
        <label>Address
            <input type="text" name="address" required>
        </label>
        <br>
        <label>City
            <input type="text" name="city" required>
        </label>
        <br>
        <label>State
            <input type="text" name="state" autocapitalize="characters" required>
        </label>
        <br>
        <label>Zip Code
            <input type="text" name="zip" required>
        </label>
        <br>
        <input type="submit" value="Add this location">
    </fieldset>
</form>
<br>
{{#each location}}
    <address>
        <strong>{{name}}</strong><br>
        {{address}}<br>
    {{city}}, {{state}} {{zip}}<br>
    </address>
{{/each}}