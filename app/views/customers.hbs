<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newCustomer">Create a new customer account</button>

<div class="modal fade" id="newCustomer" tabindex="-1" role="dialog" aria-labelledby="newCustomerLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newCustomerLabel">Create a new customer account</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/api/customers" method="post">
                    <fieldset>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="col-form-label">First name
                                    <input type="text" class="form-control" name="firstname" autocapitalize="words" autofocus required>
                                </label>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="col-form-label">Last name
                                    <input type="text" class="form-control" name="lastname" autocapitalize="words" required>
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Email address
                                <input type="email" class="form-control" name="email" required>
                            </label>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="col-form-label">User name
                                    <input type="text" class="form-control" name="username" autocapitalize="off" required>
                                </label>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="col-form-label">Password
                                    <input type="password" class="form-control" name="password" required>
                                </label>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-primary" value="Create account">
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<br>
<table>
    <caption>Customers</caption>
    <thead>
    <tr>
        <td>Username</td>
        <td>First Name</td>
        <td>Last Name</td>
    </tr>
    </thead>
    <tbody>
        {{#each customer}}
            <tr>
                <td>{{username}}</td>
                <td>{{firstname}}</td>
                <td>{{lastname}}</td>
            </tr>
        {{/each}}
    <tr>
    </tbody>
</table>